{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:app:default",
    "core:event:default",
    "core:menu:default",
    "core:path:default",
    "core:resources:default",
    "core:tray:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:allow-app-write-recursive",
    "fs:allow-app-read-recursive",
    "os:allow-platform",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/*" },
        { "path": "$APPDATA\\*" },
        { "path": "$APPDATA/notes/*" },
        { "path": "$APPDATA\\notes\\*" }
      ]
    }
  ]
}