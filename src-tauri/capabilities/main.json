{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "fs:read-all",
    "fs:allow-mkdir",
    "fs:write-all",
    "fs:scope-appdata-recursive",
    "window:allow-start-dragging",
    "os:allow-platform"
  ]
}
